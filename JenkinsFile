@Library('Jenkins-Shared-Library')_
pipeline {
    agent any
    APP_IMAGE_NAME      = 'mostafayounis0/new-app'   //DockerHubub_repo/Image_name
        Dockerfile_PATH     = 'Lab/Dockerfile'	       //Path to Dockerfile in github repo
        DEPLOYMENT_PATH     = 'Lab/deployment.yaml'     //Path to deployment.yaml file in github repo 
   
    
    stages {       
       
        stage('Build Docker image from Dockerfile in GitHub') {
            steps {
                script {
                  
                   buildDockerImage("${imageName}")
                      
                }
            }
        }
        stage('Push image to Docker hub') {
            steps {
                script {
                  
                   pushDockerImage("${dockerHubCredentialsID}", "${imageName}")
                      
                }
            }
        }

        stage('Edit new image in deployment.yaml file') {
            steps {
                script { 
                 dir('k8s') {
            editNewImage("${imageName}")
   }
                }
            }
        }
        stage('Deploy on k8s Cluster') {
            steps {
                script { 
                 dir('k8s') {
             deployOnKubernetes("${k8sCredentialsID}")
                    }
                }
            }
        }
    }

    post {
        always {
            echo "${JOB_NAME}-${BUILD_NUMBER} pipeline always succeeded"
        }
        success {
            echo "${JOB_NAME}-${BUILD_NUMBER} pipeline succeeded"
        }
        failure {
            echo "${JOB_NAME}-${BUILD_NUMBER} pipeline failed"
        }
    }
}
